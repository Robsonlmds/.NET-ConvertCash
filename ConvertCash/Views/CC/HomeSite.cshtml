@{
    ViewData["Title"] = "ConvertCash";
    var cc = ViewBag.cep as ConvertCash;

}

<html lang="pt-br">

<div class="text-center">
    <h1 class="display-4">ConvertCash</h1>
</div>

<div class="text-center mt-5">
    <form method="post" class="row g-2">

        <div class="col-11">
            <input type="text" class="form-control" name="Conversion_rates" placeholder="Ex: USD, BRL, CLP" id="myInput" maxlength="3" />
        </div>

        <div class="col-1">
            <button class="btn btn-outline-dark" type="submit">Check</button>
        </div>

    </form>
</div>

@if(cc != null)
{
    <div class="text-center mt-5" id="allcontent">

        <p>CEP: @cc.Conversion_rates</p>
        
    </div>
}

